@model App.Requests.RegistrationRequest

@{
    ViewData["Title"] = "Register";
    Layout = "_NonSpaLayout";
}

<form asp-controller="Register" asp-action="Index" class="auth-box">
    <h3 class="text-center">Register to Use Our Service</h3>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="small form-text text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
        <span asp-validation-for="Password" class="small form-text text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Register" class="btn btn-primary btn-block" />
    </div>

    <p class="mt-3 mb-3 text-muted text-center">
        Already have account? Sign in <a asp-controller="Auth" asp-action="Login">here</a>.
    </p>
</form>